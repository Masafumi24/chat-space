.main
  .main-header
    .main-header__title
      =@group.name
      .main-header__title-text
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "main-header__btn" do
      Edit
  .main-message
    .main-message__box
      = render @messages
  .main-form
    = form_for [@group, @message] do |f|
      .main-form__box
        = f.text_field :content, class: 'main-form__box-text', placeholder: 'type a message'
        = f.label :image,class: 'main-form__box-image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'main-form__box-image__file'
        = f.submit 'Send', class: 'submit-btn'