.main-message__box-top{data: {message: {id: message.id}}}
  .main-message__box-top__user 
    = message.user.name
    .main-message__box-top__user-text
      - if message.content.present?
        = message.content
      = image_tag message.image.url, class: 'main-message__box-top__user-text__image' if message.image.present?
  .main-message__box-top__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")